<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.ixbiopharma.glucose.component.RoundedRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/gray_border">

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:orientation="horizontal">

            <View
                android:id="@+id/color_view"
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/icon"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:background="@color/color_alert_gray" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingBottom="4dp"
                android:paddingStart="15dp"
                android:paddingTop="4dp">

                <TextView
                    android:id="@+id/title"
                    fontPath="fonts/Raleway-Bold.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="start|center_vertical"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:paddingBottom="5dp"
                    android:paddingEnd="5dp"
                    android:paddingTop="5dp"
                    android:text="What to Eat to Keep Your Blood Sugar in Check"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/date"
                    fontPath="fonts/OpenSans-Regular.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:text="25 Jan 2017"
                    android:textColor="@color/light_gray3"
                    android:textSize="12sp" />

            </LinearLayout>
        </LinearLayout>

    </com.ixbiopharma.glucose.component.RoundedRelativeLayout>

</LinearLayout>