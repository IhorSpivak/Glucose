<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/weight"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/weight_ic"
            android:src="@mipmap/ic_weight"
            android:tint="@color/light_gray2" />

        <TextView
            fontPath="fonts/extra-bold.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Weight"
            android:id="@+id/weight_text"
            android:textAllCaps="true"
            android:textColor="@color/light_gray2"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/glucose"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/glucose_ic"
            android:src="@mipmap/ic_glucose"
            android:tint="@color/light_gray2" />

        <TextView
            fontPath="fonts/extra-bold.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Glucose"
            android:textStyle="bold"
            android:id="@+id/glucose_text"
            android:textAllCaps="true"
            android:textColor="@color/light_gray2"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/action"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/action_ic"
            android:src="@mipmap/ic_excersice"
            android:tint="@color/light_gray2" />

        <TextView
            fontPath="fonts/extra-bold.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Activity"
            android:id="@+id/action_text"
            android:textAllCaps="true"
            android:textColor="@color/light_gray2"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>